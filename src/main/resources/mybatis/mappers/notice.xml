<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.notice">

	<select id="selectNotice" resultType="map" parameterType="map">
		select
		notice_id , notice_title, notice_content, notice_date, user_id
		from
		notice

	</select>

	<select id="selectContent" resultType="com.scci.vo.NoticeVO"
		parameterType="com.scci.vo.NoticeVO">
		select notice_id, notice_title, notice_content, notice_date, user_id
		from notice
		where notice_id = #{notice_id}
		<!-- <if test= 'value != null'> and notice_id = #{noticeId} </if> -->
	</select>

	<insert id="selectInsert" parameterType="com.scci.vo.NoticeVO">
		INSERT INTO `arasil`.`notice`
		(`NOTICE_TITLE`,
		`NOTICE_CONTENT`,
		`NOTICE_DATE`,
		`USER_ID`)
		values(
		#{notice_title}
		,#{notice_content}
		,now()
		,#{user_id}
		)
	</insert>

	<update id="selectUpdate" parameterType="com.scci.vo.NoticeVO">
		UPDATE `arasil`.`notice`
		SET
		`NOTICE_TITLE` = #{notice_title},
		`NOTICE_CONTENT` = #{notice_content},
		`NOTICE_DATE` = now(),
		where notice_id = #{notice_id}

	</update>
	
	<delete id="selectDelete" parameterType="int">
	DELETE FROM `arasil`.`notice`
	
		WHERE notice_id = #{notice_id}
	</delete>


</mapper>